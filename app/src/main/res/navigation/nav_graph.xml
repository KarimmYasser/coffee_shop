<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cofee_shop.presentation.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_coffeeDetailFragment"
            app:destination="@id/coffeeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/drinkMenuFragment"
        android:name="com.example.cofee_shop.presentation.fragments.DrinkMenuFragment"
        android:label="Drink Menu"
        tools:layout="@layout/fragment_drink_menu">

        <action
            android:id="@+id/action_drinkMenuFragment_to_coffeeDetailFragment"
            app:destination="@id/coffeeDetailFragment" />

        <action
            android:id="@+id/action_drinkMenuFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.cofee_shop.presentation.fragments.OrderFragment"
        android:label="Your Orders"
        tools:layout="@layout/fragment_order" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.cofee_shop.presentation.fragments.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites">

        <action
            android:id="@+id/action_favoritesFragment_to_coffeeDetailFragment"
            app:destination="@id/coffeeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/coffeeDetailFragment"
        android:name="com.example.cofee_shop.presentation.fragments.CoffeeDetailFragment"
        android:label="Coffee Details"
        tools:layout="@layout/fragment_coffee_detail">

        <argument
            android:name="coffee"
            app:argType="com.example.cofee_shop.domain.models.Coffee" />
    </fragment>

    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.cofee_shop.presentation.fragments.PaymentFragment"
        android:label="Payment"
        tools:layout="@layout/fragment_payment">

        <argument
            android:name="orderId"
            app:argType="string" />

        <action
            android:id="@+id/action_paymentFragment_to_orderFragment"
            app:destination="@id/orderFragment"
            app:popUpTo="@id/drinkMenuFragment"
            app:popUpToInclusive="false" />
    </fragment>

</navigation>