<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cofee_shop.presentation.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/drinkMenuFragment"
        android:name="com.example.cofee_shop.presentation.fragments.DrinkMenuFragment"
        android:label="Drink Menu"
        tools:layout="@layout/fragment_drink_menu">

        <action
            android:id="@+id/action_menuFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.cofee_shop.presentation.fragments.DetailFragment"
        android:label="Drink Details"
        tools:layout="@layout/fragment_detail" />




    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.cofee_shop.presentation.fragments.OrderFragment"
        android:label="Your Order"
        tools:layout="@layout/fragment_order" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.cofee_shop.presentation.fragments.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />

</navigation>
