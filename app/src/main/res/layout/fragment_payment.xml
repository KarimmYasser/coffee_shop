<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.PaymentFragment"

android:background="@color/background_cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_cream"
            app:title="Payment"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Order Summary Card -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        style="@style/TextStyle.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Summary"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <TextView
                        android:id="@+id/textOrderId"
                        style="@style/TextStyle.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        tools:text="Order #123456" />

                    <TextView
                        android:id="@+id/textOrderItems"
                        style="@style/TextStyle.BodySecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        tools:text="2x Iced Lemonade - Rp 24,000" />

                    <!-- Price Breakdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small">

                        <TextView
                            style="@style/TextStyle.BodySecondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal" />

                        <TextView
                            android:id="@+id/textSubtotal"
                            style="@style/TextStyle.BodySecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Rp 24,000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small">

                        <TextView
                            style="@style/TextStyle.BodySecondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery fee" />

                        <TextView
                            android:id="@+id/textDeliveryFee"
                            style="@style/TextStyle.BodySecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Rp 3,000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <TextView
                            style="@style/TextStyle.BodySecondary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Packaging fee" />

                        <TextView
                            android:id="@+id/textPackagingFee"
                            style="@style/TextStyle.BodySecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Rp 5,000" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_color"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle.Subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TOTAL" />

                        <TextView
                            android:id="@+id/textTotalAmount"
                            style="@style/TextStyle.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Rp 32,000" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Payment Method Card -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        style="@style/TextStyle.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Method"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <RadioGroup
                        android:id="@+id/radioGroupPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioCreditCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Credit Card"
                            android:checked="true"
                            android:layout_marginBottom="@dimen/margin_small" />

                        <RadioButton
                            android:id="@+id/radioDebitCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Debit Card"
                            android:layout_marginBottom="@dimen/margin_small" />

                        <RadioButton
                            android:id="@+id/radioDigitalWallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Digital Wallet" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btnProcessPayment"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="Pay Now"
                    android:backgroundTint="@color/button_primary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>