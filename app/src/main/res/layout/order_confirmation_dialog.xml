<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/loading_dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_brown"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_dialog_coffee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_brown"
        android:layout_marginBottom="8dp"
        android:text="Coffee Name" />

    <TextView
        android:id="@+id/tv_dialog_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/primary_brown"
        android:layout_marginBottom="8dp"
        android:text="Quantity: 1" />

    <TextView
        android:id="@+id/tv_dialog_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_brown"
        android:layout_marginBottom="24dp"
        android:text="Total: Rp 0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/primary_brown"
            android:background="@android:color/transparent"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="24dp" />

        <Button
            android:id="@+id/btn_confirm_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Now"
            android:textColor="@color/text_white"
            android:background="@drawable/button_primary_brown"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

</LinearLayout>