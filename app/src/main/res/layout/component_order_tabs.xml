<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/margin_medium"
    android:background="@drawable/tab_container_background"
    android:padding="@dimen/padding_tiny">

    <TextView
        android:id="@+id/btnRecently"
        style="@style/TabButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_button_height"
        android:layout_weight="1"
        android:text="@string/recently_tab"
        android:layout_marginEnd="@dimen/margin_tiny" />

    <TextView
        android:id="@+id/btnPastOrders"
        style="@style/TabButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_button_height"
        android:layout_weight="1"
        android:text="@string/past_orders_tab"
        android:layout_marginStart="@dimen/margin_tiny" />

</LinearLayout>