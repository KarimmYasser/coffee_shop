<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8E3B6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="223dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_background"
            android:background="@drawable/rounded_bottom_image_background"
            android:clipToOutline="true"
            android:contentDescription="@null" />

        <View
            android:id="@+id/cofeeBackgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_bottom_image_background_overlay" />

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/splash_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/co_choc"
                android:textSize="40sp"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0.1"
                android:textColor="#FF020202"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/splash_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.01"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/a_way_to_enjoy_bitter_and_sweet_of_life"
                android:textSize="11sp"
                android:textColor="#FF020202"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/coffeeBeansImage"
        android:layout_width="233.dp"
        android:layout_height="202.dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_coffee_beans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/chocolateBarImage"
        android:layout_width="233.dp"
        android:layout_height="202.dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_chocolate_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@null" />

